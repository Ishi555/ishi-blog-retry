---
import { Comments, HomeSide, PostFooter, PostHeader } from "charm:components";
import MainLayout from "./MainLayout.astro";
import config from "charm:config";

const { postData } = Astro.props;
---

<MainLayout {...Astro.props}>
  <HomeSide slot="side" />
  <article data-pagefind-body>
    {postData && <PostHeader {postData} />}
    <slot />
    {postData && <PostFooter {postData} />}
  </article>
  {config.giscus && <Comments />}
</MainLayout>
