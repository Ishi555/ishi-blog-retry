{
  "editor.formatOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "astro",
    "typescript",
    "typescriptreact"
  ],
  "prettier.documentSelectors": ["**/*.astro"],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "stylelint.validate": ["html", "svelte", "astro"],
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    // prettier will 
    // format
    // *italic: use `*` or `_`*"
    // to
    // _italic: use `_` or `\_`\_
    // I don't know how to solve this
    // so I use markdown-all-in-one instead
  },
}
